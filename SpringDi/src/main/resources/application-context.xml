<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- 빈생성 -->
	<bean id = "s" class="ex01.SpringTest"/>
	
	<!-- 의존관계 / 마감 해두됨-->
	<bean id = "a" class = "ex02.Chef"/> 
	<bean id = "b" class = "ex02.Hotel">
		<constructor-arg ref="a"/>
	</bean>
	<!-- 의존관계 setter  -->
	<bean id="d" class="ex03.DatabaseDev">
		<property name = "url" value = "jdbc:mysql://localhost:3306/spring"/>
		<property name = "uid" value = "spring"/>
		<property name = "upw" value = "spring"/>
	</bean>
	<!-- 의존관계 setter(객체)  -->
	<bean id = "dao" class="ex03.MemberDao">
		<property name = "dev" ref="d"/>
	</bean>
	<!--  -->
	<bean id = "bt1" class ="ex04.quiz.Battery1"/>
	<bean id = "bt2" class ="ex04.quiz.Battery2"/>
	
	<bean id = "car" class = "ex04.quiz.Car">
		<constructor-arg ref="bt1"/>
	</bean>	
	
	<!-- bean들은 자동으로 싱글톤 형식을 가지게 됩니다 (반대-prototype)  -->
	<bean id = "car2" class = "ex04.quiz.Car" scope="prototype">
		<constructor-arg ref="bt1"/>
	</bean>	
	
</beans>
